{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="table table-striped records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>User</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cms_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.user }}</td>
                <td>{{ entity.password | slice(0,20) }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cms_user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cms_user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cms_user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
